<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondoViewMessage"
    tools:context=".ViewMessageActivity">

    <TextView
        android:id="@+id/tvViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="76dp"
        android:text="@string/tvUsuario"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/tvMessage"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/tvViewUser"
        app:layout_constraintTop_toBottomOf="@+id/tvViewUser" />

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvViewUser"
        app:layout_constraintTop_toTopOf="@+id/tvViewUser" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="295dp"
        android:layout_height="145dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvViewMessage"
        app:layout_constraintTop_toBottomOf="@+id/tvViewMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>